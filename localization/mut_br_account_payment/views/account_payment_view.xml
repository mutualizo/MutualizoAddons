                <field name="payment_date" position="before">
                    <field name="discount"/>
                    <field name="pay_sub"/>
                    <field name="interest"/>
                    <field name="fee"/>
                    <field name="pay_amount"/>
                </field>
            </field>
        </record>
         -->
     
    </data>
</odoo>
