        <field name="model">account.fiscal.position.tax.rule</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="fiscal_position_id" />
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="domain" invisible="1" />
                    <field name="sequence"/>
                </group>
                <group string="Usar a seguinte tributação">
                    <group>
                        <field name="tax_id" domain="[('domain', '=', domain)]" />
                        <field name="cfop_id" domain="[('internal_type', '=', 'normal')]" invisible="domain not in ('icms', 'issqn')"/>
                        <field name="icms_benef" invisible="domain != 'icms'"/>
                        <field name="enq_ipi" invisible="domain != 'ipi'"/>
                        <field name="cla_ipi" invisible="domain != 'ipi'"/>
                    </group>
                    <group>
                        <field name="cst_icms" invisible="domain != 'icms'" />
                        <field name="csosn_icms" invisible="domain != 'icms'" />
                        <field name="cst_ipi" invisible="domain != 'ipi'"/>
                        <field name="cst_pis" invisible="domain != 'pis'"/>
                        <field name="cst_cofins" invisible="domain != 'cofins'" />
                    </group>
                </group>
                <group name="icms" invisible="domain not in ('icms')">
                    <group>
                        <field name="tax_icms_st_id" invisible="cst_icms not in ('10', '30', '70', '90') and csosn_icms not in ('201', '202', '203', '900')"/>
                        <field name="reducao_icms_st" invisible="cst_icms not in ('10', '30', '70', '90') and csosn_icms not in ('201', '202', '203', '900')"/>
                        <field name="tem_difal"/>
                        <field name="tax_icms_intra_id" invisible="tem_difal == False or domain == 'simples'"/>
                    </group>
                    <group>
                        <field name="incluir_ipi_base" invisible="domain != 'icms'"/>
                        <field name="icms_aliquota_credito" invisible="domain != 'icms'"/>
                        <field name="reducao_icms" invisible="cst_icms not in ('20', '70', '90')"/>
                        <field name="reducao_aliquota_icms" invisible="cst_icms not in ('51')"/>
                        <field name="icms_aliquota_diferimento" invisible="cst_icms not in ('51') and csosn_icms not in ('201', '202', '203', '900')"/>
                        <field name="preco_pauta" invisible="cst_icms not in ('10', '30', '70', '90') and csosn_icms not in ('201', '202', '203', '900')"/>
                        <field name="aliquota_mva" invisible = "cst_icms not in ('10', '30', '70', '90') and csosn_icms not in ('201', '202', '203', '900')"/>
                        <field name="icms_st_aliquota_deducao" invisible = "cst_icms not in ('10', '30', '70', '90') and csosn_icms not in ('201', '202', '203', '900')"/>
                        <field name="tax_icms_inter_id" invisible="tem_difal == False"/>
                        <field name="tax_icms_fcp_id" invisible="cst_icms not in ('00', '10', '20', '51', '70', '90') and domain == 'simples'"/>
                        <field name="tax_icms_fcp_st_id" invisible="cst_icms not in ('10', '30', '70', '90') and csosn_icms not in ('201', '202', '203', '900')"/>
                    </group>
                </group>
                <group name="ipi" invisible="domain != 'ipi'">
                    <group>
                        <field name="reducao_ipi" />
                    </group>
                </group>
                <group name="issqn" invisible="domain != 'issqn'">
                    <group>
                        <field name="l10n_br_issqn_deduction" />
                    </group>
                    <group>
                    </group>
                </group>
                <group string="Aplicar esta regra quando:">
                    <field name="tipo_produto" />
                    <field name="origin" invisible="tipo_produto == 'service'"/>
                    <field name="issqn_tipo" invisible="tipo_produto == 'product'"/>
                </group>
                <group string="Estados" invisible="tipo_produto == 'service'">
                    <field name="state_ids" widget="many2many_tags" nolabel="1"/>
                </group>
                <group string="Categorias Fiscais">
                    <field name="fiscal_category_ids" widget="many2many_tags" nolabel="1"/>
                </group>
                <group string="Classificação Fiscal" invisible="tipo_produto == 'service'">
                    <field name="product_fiscal_classification_ids" widget="many2many_tags" nolabel="1"/>
                </group>
                <group string="Tipos de Serviço" invisible="tipo_produto == 'product'">
                    <field name="service_type_ids" widget="many2many_tags" nolabel="1"/>
                </group>
                <group string="Centro Custo/Contrato" invisible="tipo_produto == 'product'">
                    <field name="service_analytic_ids" widget="many2many_tags" nolabel="1"/>
                </group>
                <group string="Observações">
                    <field name="fiscal_observation_ids" nolabel="1" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_br_account_tax_rule_tree" model="ir.ui.view">
        <field name="name">view.br_account.tax.rule.tree</field>
        <field name="model">account.fiscal.position.tax.rule</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <tree>
                <field name="fiscal_position_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="name"/>
                <field name="origin"/>
                <field name="fiscal_category_ids" widget="many2many_tags"/>
                <field name="domain"/>
                <field name="cst_vl"/>
                <field name="tax_id"/>
            </tree>
        </field>
    </record>

	<record id="view_br_account_tax_rule_action" model="ir.actions.act_window">
	    <field name="name">Regras Fiscais</field>
	    <field name="res_model">account.fiscal.position.tax.rule</field>
	    <field name="view_mode">tree,form</field>
	    <field name="view_id" eval="False"/>
	</record>

    <record id="view_br_account_tax_rule_action_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="view_br_account_tax_rule_action"/>
        <field name="sequence" eval="0"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_br_account_tax_rule_tree"/>
    </record>

    <record id="view_br_account_tax_rule_action_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="view_br_account_tax_rule_action"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_br_account_tax_rule_form"/>
    </record>

	<menuitem
	    action="view_br_account_tax_rule_action"
	    id="menu_rule_account_fiscal_position_form"
	    parent="account.account_account_menu" sequence="3"/>

    <record id="br_account_position_tree" model="ir.ui.view">
        <field name="name">br_account.fiscal.position.tree</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_tree"/>
        <field name="arch" type="xml">
        	<field name="name" position="after">
        		<field name="natureza"/>	
        		<field name="fiscal_type"/>	
        		<field name="product_document_id"/>	
        		<field name="service_document_id"/>	
        		<field name="auto_gerar_fatura"/>	
        		<field name="auto_validar_remessa"/>
        	</field>	
        </field>
    </record>

    <record id="br_account_position_form" model="ir.ui.view">
        <field name="name">br_account.fiscal.position.form</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
            	<field name="natureza"/>	
            </field>
            <field name="auto_apply" position="after">
                <field name="fiscal_type"/>
            </field>
            <xpath expr="//page[@name='account_mapping']" position="after">
                <group>
                    <field name="journal_id" placeholder="Este diário vai ser usado no faturamento" />
                    <field name="account_id" placeholder="Esta conta vai ser usada para faturamento" />
                </group>
            </xpath>
            <xpath expr="//page[@name='account_mapping']" position="after">
                <page name="notes" string="Observações Fiscais">
                    <group string="Observações">
                        <field name="fiscal_observation_ids" nolabel="1" />
                    </group>
                </page>
                <page name="other_information" string="Outras Informações">
                	<group>
                		<group>
                			<field name="auto_gerar_fatura" />
                			<field name="own_issuer" invisible="fiscal_type != 'entrada'"/>
                			<field name="auto_validar_remessa"/>
                		</group>
                		<group>
                		</group>
                	</group>
                    <group>
                        <group>
                            <field name="product_document_id" />
                            <field name="product_serie_id" />
                        </group>
                        <group>
                            <field name="service_document_id" />
                            <field name="service_serie_id" />
                        </group>
                    </group>
                </page>
            </xpath>
            <field name="vat_required" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="zip_from" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="zip_to" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//group/group/div" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group/group/label" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <page name="tax_mapping" position="attributes">
                <attribute name="invisible">1</attribute>
            </page>
            <page name="tax_mapping" position="before">
                <page name="tax_rules" string="Regras de Impostos">
                    <group name="icms_rules" string="Regras de ICMS">
                        <field nolabel="1" name="icms_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'icms'}">
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="name" />
                                <field name="tax_id" />
                                <field name="cfop_id" />
                                <field name="cst_icms" />
                                <field name="reducao_icms" />
                                <field name="tax_icms_st_id" />
                                <field name="reducao_icms_st" />
                                <field name="aliquota_mva" />
                            </tree>
                        </field>
                    </group>
                    <group name="ipi_rules" string="Regras de IPI">
                        <field nolabel="1" name="ipi_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'ipi'}">
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="name" />
                                <field name="tax_id" />
                                <field name="cst_ipi" />
                                <field name="reducao_ipi" />
                            </tree>
                        </field>
                    </group>
                    <group name="pis_rules" string="Regras de PIS">
                        <field nolabel="1" name="pis_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'pis'}">
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="name" />
                                <field name="tax_id" />
                                <field name="cst_pis" />
                            </tree>
                        </field>
                    </group>
                    <group name="cofins_rules" string="Regras de COFINS">
                        <field nolabel="1" name="cofins_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'cofins'}">
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="name" />
                                <field name="tax_id" />
                                <field name="cst_cofins" />
                            </tree>
                        </field>
                    </group>
                    <group name="ii_rules" string="Regras de II" invisible="1">
                        <field nolabel="1" name="ii_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'ii'}" />
                    </group>
                    <group name="issqn_rules" string="Regras ISSQN">
                        <field nolabel="1" name="issqn_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'issqn'}"/>
                    </group>
                    <group name="irrf_rules" string="Regras de IRRF">
                        <field nolabel="1" name="irrf_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'irrf'}" />
                    </group>
                    <group name="inss_rules" string="Regras de INSS">
                        <field nolabel="1" name="inss_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'inss'}" />
                    </group>
                    <group name="other_rules" string="Regras Outras Retenções">
                        <field nolabel="1" name="outros_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'outros'}" />
                    </group>
                    <group name="csll_rules" string="Regras de CSLL">
                        <field nolabel="1" name="csll_tax_rule_ids" context="{'default_fiscal_position_id': id, 'default_domain': 'csll'}" />
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>