<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

	    <record id="view_br_account_beneficio_fiscal_tree" model="ir.ui.view">
	        <field name="name">br_account.beneficio.fiscal.tree</field>
	        <field name="model">br_account.beneficio.fiscal</field>
	        <field name="arch" type="xml">
	            <tree string="Benefício Fiscal">
	                <field name="code"/>
	                <field name="name"/>
	                <field name="state_id"/>
	            </tree>
	        </field>
	    </record>
	
	    <record id="view_br_account_beneficio_fiscal_form" model="ir.ui.view">
	        <field name="name">br_account.beneficio.fiscal.form</field>
	        <field name="model">br_account.beneficio.fiscal</field>
	        <field name="arch" type="xml">
	            <form string="Benefício Fiscal">
	                <sheet>
	                    <group>
	                        <group>
	                            <field name="code"/>
	                            <field name="name"/>
	                            <field name="state_id"/>
	                        </group>
	                        <group>
	                            <field name="dt_start"/>
	                            <field name="dt_end"/>
	                        </group>
	                        <group string="CSTs" colspan="4">
	                            <field name="cst_line_ids" widget="many2many_tags" nolabel="1"/>
	                        </group>
	                        <group string="Observação" colspan="4">
	                            <field name="memo" nolabel="1"></field>
	                        </group>
	                    </group>
	                </sheet>
	            </form>
	        </field>
	    </record>

        <record id="br_account_beneficio_fiscal_action" model="ir.actions.act_window">
            <field name="name">Benefício Fiscal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">br_account.beneficio.fiscal</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_br_account_beneficio_fiscal_tree" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Add a new tax benefit
                </p><p>
                  A tax benefit is necessary to determine the
                  fiscal operations for your fiscal moves.
                </p>
            </field>
        </record>

    </data>
</odoo>