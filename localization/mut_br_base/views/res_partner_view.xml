<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

		<record id="mut_br_base_res_partner_address" model="ir.ui.view">
		    <field name="name">mut_br_base.res.partner.address</field>
		    <field name="model">res.partner</field>
		    <field name="priority">999</field>
		    <field name="arch" type="xml">
		        <form>
		            <div class="o_address_format">
		                <field name="zip" placeholder="Zip code..." style="width: 70%" class="o_address_zip"/>
		                <field name="street" placeholder="Street..." class="o_address_street"/>
		                <field name="number" placeholder="Street number..." class="o_address_street"/>
		                <field name="street2" placeholder="Complement..." class="o_address_street"/>
		                <field name="district" placeholder="District..." class="o_address_street"/>
		                <field name="state_id" domain="[('country_id', '=', country_id)]" placeholder="State..."
		                       style="width: 45%" class="o_address_state" options='{"no_open": True, "no_create": True}'/>
		                <field name="city_id" placeholder="City..." style="width: 50%" class="o_address_city"
		                       options='{"no_open": True, "no_create": True}' invisible="[('country_id', '!=', %(base.br)d)]"/>
		                <field name="city" placeholder="City..." style="width: 50%" class="o_address_city"
		                       force_save="True" invisible="[('country_id', '=', %(base.br)d)]"/>
		                <field name="country_id" placeholder="Country..." class="o_address_country"
		                       options='{"no_open": True, "no_create": True}'/>
		            </div>
		        </form>
		    </field>
		</record>

	    <record id="l10n_br_base_res_partner_filter" model="ir.ui.view">
	        <field name="name">l10n_br_base.res.partner.filter</field>
	        <field name="model">res.partner</field>
	        <field name="inherit_id" ref="base.view_res_partner_filter" />
	        <field name="arch" type="xml">
	            <field name="name" position="after">
	                <field name="legal_name" />
	                <field name="cnpj_cpf" />
	            </field>
	        </field>
	    </record>
    
        <record id="base_view_partner_tree_inherit" model="ir.ui.view">
            <field name="name">base.view.partner.tree.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="display_name" position='before'>
					<field name='cnpj_cpf' optional="show" readonly="1"/>
				</field>
				<field name="vat" position='after'>
					<field name='inscr_est' optional="hide"/>
					<field name='rg_fisica' optional='hide'/>
					<field name='inscr_mun' optional='hide'/>
				</field>
				<field name="display_name" position='after'>
					<field name='legal_name' optional='hide'/>
				</field>
				<field name="city" position='before'>
					<field name='district' optional="show"/>
				</field>
			</field>
		</record>

        <record id="base_view_partner_simple_form_inherit" model="ir.ui.view">
            <field name="name">base.view.partner.simple.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_simple_form"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="mobile" position='before'>
					<field name='cnpj_cpf'/>
				</field>
			</field>
		</record>

