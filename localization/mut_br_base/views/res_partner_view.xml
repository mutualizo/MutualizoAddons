<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="base_view_partner_tree_inherit" model="ir.ui.view">
            <field name="name">base.view.partner.tree.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="display_name" position='before'>
					<field name='cnpj_cpf' optional="show" readonly="1"/>
				</field>
				<field name="vat" position='after'>
					<field name='inscr_est' optional="hide"/>
					<field name='rg_fisica' optional='hide'/>
					<field name='inscr_mun' optional='hide'/>
				</field>
				<field name="display_name" position='after'>
					<field name='legal_name' optional='hide'/>
				</field>
				<field name="city" position='before'>
					<field name='district' optional="show"/>
				</field>
			</field>
		</record>

        <record id="base_view_partner_simple_form_inherit" model="ir.ui.view">
            <field name="name">base.view.partner.simple.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_simple_form"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="mobile" position='before'>
					<field name='cnpj_cpf'/>
				</field>
			</field>
		</record>

