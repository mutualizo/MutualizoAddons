        <record id="base_view_partner_form_inherit" model="ir.ui.view">
            <field name="name">base.view.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<xpath expr="//h1" position="after">
					<group>
						<div class="oe_edit_only">
							<label for="legal_name" string="Full Name" invisible='is_company'/>
							<label for="legal_name" string="Legal Name" invisible='not is_company'/>
						</div>
						<field name="legal_name" nolabel="1"/>
					</group>
				</xpath>
	            <field name="street2" position="replace"/>
               <field name="street" position="replace">
                   <field name="street" placeholder="Street" />
                   <field name="number" placeholder="Number"/>
                   <field name="street2" placeholder="Complement"/>
                   <field name="district" placeholder="District"/>
               </field>
				
	            <notebook position="inside">
	                <page string="Fiscal" name="fiscal">
	                     <group name="fiscal">
	                        <group string="Fiscal Infos" name="fiscal_numbers">
	                        	<field name="cei_code" />
	                        	<field name="inscr_est" invisible='not is_company' />
	                        	<field name="inscr_mun" invisible='not is_company' />
	                        	<field name="suframa" invisible='not is_company' />
	                            <field name="rg_fisica" invisible='is_company' />
	                        </group>
							<group string="Other Infos" name="other_infos">
	                        	<field name="union_entity_code" />
	                        	<field name="rntrc_code" />
	                        </group>
	                    </group>
	                </page>
	            </notebook>
				<field name="vat" position="after">
					<div>
					    <label for="cnpj_cpf" string="CPF" invisible='is_company'/>
					    <label for="cnpj_cpf" string="CNPJ" invisible='not is_company'/>
					</div>
					<field name="cnpj_cpf" nolabel="1"/>
				</field>
				<field name="vat" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
				<group name="purchase" position="inside">
            		<field name="pix_key_ids" context="{'default_partner_id': active_id}">
            			<tree string="Payment Methods" editable="bottom" nolabel="1">
            				<field name='sequence' widget='handle'/>
            				<field name="partner_id" invisible="1"/>
            				<field name="key_type"/>
            				<field name="key"/>
            				<field name="partner_bank_id"/>
            			</tree>
            		</field>
				</group>
			</field>
		</record>

