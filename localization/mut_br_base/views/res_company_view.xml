<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="base_view_company_tree_inherit" model="ir.ui.view">
            <field name="name">base.view.company.tree.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_tree"/>
            <field eval="99" name="priority"/>
            <field name="arch" type="xml">
				<field name="name" position='before'>
					<field name='cnpj_cpf' optional="show" readonly="1"/>
				</field>
			</field>
		</record>

        <record id="base_view_company_form_inherit" model="ir.ui.view">
            <field name="name">base.view_company_form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field eval="99" name="priority"/>
            <field name="arch" type="xml">
				<xpath expr="//h1" position="after">
					<group>
						<div>
							<label for="legal_name" string="Legal Name"/>
						</div>
						<field name="legal_name" nolabel="1"/>
					</group>
				</xpath>
				<field name="vat" position="after">
					<field name="cnpj_cpf"/>
				</field>
				<field name="vat" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
				<field name="company_registry" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
	            <notebook position="inside">
	                <page string="Fiscal Data">
	                    <group>
	                        <group>
	                            <field name="inscr_mun" />
	                        </group>
	                        <group>
	                        	<field name="inscr_est" />
	                            <field name="suframa" />
	                        </group>
	                    </group>
	                </page>
	            </notebook>
				
				<xpath expr="//div[hasclass('o_address_format')]" position="replace">
					<div class="o_address_format">
						<field name="zip" placeholder="ZIP" class="o_address_street" />
						<field name="street" placeholder="Street..." class="o_address_street" />
						<field name="number" class="o_address_city" placeholder="Number" />
						<field name="district" class="o_address_state" placeholder="District" />
						<field name="street2" placeholder="Complement..." class="o_address_street"/>
						<field name="country_id" placeholder="Country" class="o_address_country" 
							options='{"no_open": True, "no_create": True}'/>
						<field name="state_id" class="o_address_country" placeholder="State" options='{"no_open": True, "no_create": True}' 
							context="{'default_country_id': country_id}"/>
						<field name="city" invisible="1"/>
						<field name="city_id" placeholder="City" class="o_address_country" options='{"no_open": True, "no_create": True}'
							context="{'default_state_id': state_id}"/>
					</div>
				</xpath>
			</field>
		</record>

