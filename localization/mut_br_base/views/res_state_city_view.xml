<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mut_view_city_tree_inherit" model="ir.ui.view">
            <field name="name">view.city.tree.inherit</field>
            <field name="model">res.city</field>
            <field name="inherit_id" ref="base_address_extended.view_city_tree"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="state_id" position='after'>
					<field name='region_id'/>
					<field name='ibge_code'/>
				</field>
			</field>
		</record>
    
        <record id="mut_view_city_filter_inherit" model="ir.ui.view">
            <field name="name">mut.view.city.filter.inherit</field>
            <field name="model">res.city</field>
            <field name="inherit_id" ref="base_address_extended.view_city_filter"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="name" position="attributes">
					<attribute name="filter_domain">
						['|','|',('name','ilike',self), ('zipcode','ilike',self), ('ibge_code','ilike',self)]
					</attribute>
				</field>
			</field>
		</record>

    </data>
</odoo>
