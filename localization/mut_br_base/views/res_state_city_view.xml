<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Region -->
        <record id="view_state_city_tree" model="ir.ui.view">
            <field name="name">res.state.city.tree</field>
            <field name="model">res.state.city</field>
            <field name="arch" type="xml">
                <tree string="Region"> <!--  create="0" delete="0"> -->
                	<field name="ibge_code" />
                    <field name="name" />
                    <field name="state_id"/>
                    <field name="region_id" />
                    <field name="country_id" />
                </tree>
            </field>
        </record>

        <record id="view_state_city_form" model="ir.ui.view">
            <field name="name">res.state.city.form</field>
            <field name="model">res.state.city</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <group name="main_group">
                            <group name="state_city_details">
                                <field name="name"/>
                                <field name="ibge_code" />
                            </group>
                            <group>
			                    <field name="state_id" />
			                    <field name="region_id" />
			                    <field name="country_id" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_state_city_search" model="ir.ui.view">
            <field name="name">res.state.city.search</field>
            <field name="model">res.state.city</field>
            <field name="arch" type="xml">
                <search string="Regions">
                    <field name="name" filter_domain="['|',('name', 'ilike', self),('ibge_code','ilike', self)]"/>
                    <separator/>
					<field name="state_id" />
					<field name="region_id" />
					<field name="country_id" />                    
                    <group expand="1" string="Group By">
                    	<filter string="States" name='state' context="{'group_by':'state_id'}"/>
                    	<filter string="Regions" name='region' context="{'group_by':'region_id'}"/>
                    	<filter string="Countries" name='country' context="{'group_by':'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_state_city" model="ir.actions.act_window">
            <field name="name">Cities</field>
            <field name="res_model">res.state.city</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No City Found!
                </p><p>
                    Manage the list of cities that can be set on your partners.
                </p>
            </field>
        </record>

    </data>
</odoo>
