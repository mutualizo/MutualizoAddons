<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="base_view_country_tree_inherit" model="ir.ui.view">
            <field name="name">base.view.country.tree.inherit</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_tree"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="code" position='after'>
					<field name='bc_code'/>
					<field name='ibge_code'/>
					<field name='siscomex_code'/>
				</field>
			</field>
		</record>
    
        <record id="base_view_country_form_inherit" model="ir.ui.view">
            <field name="name">base.view.country.form.inherit</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="code" position='after'>
					<field name='bc_code'/>
					<field name='ibge_code'/>
					<field name='siscomex_code'/>
				</field>
			</field>
		</record>

        <record id="base_view_country_search_inherit" model="ir.ui.view">
            <field name="name">base.view.country.search.inherit</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_search"/>
            <field eval="9" name="priority"/>
            <field name="arch" type="xml">
				<field name="name" position="attributes">
					<attribute name="filter_domain">
						['|','|',('name','ilike',self),('code','ilike',self),('ibge_code','ilike',self)]
					</attribute>
				</field>
			</field>
		</record>
		
    </data>
</odoo>
